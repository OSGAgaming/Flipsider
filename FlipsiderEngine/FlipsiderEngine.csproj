<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../Flipsider.targets" />
  <PropertyGroup>
    <RootNamespace>Flipsider</RootNamespace>
    <OutputType>WinExe</OutputType>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Icon.bmp" />
    <None Remove="Icon.ico" />
    <None Remove="Localization\LanguageKeys\en.json" />
    <EmbeddedResource Include="Icon.bmp" />
    <EmbeddedResource Include="Icon.ico" />
    <FlipsiderEngine Include="../Output/$(OutDir)FlipsiderEngine.dll" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Assets\Content\Textures\" />
  </ItemGroup>
</Project>